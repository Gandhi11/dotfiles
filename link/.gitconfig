[push]
    default = simple
[pull]
    rebase = true
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[help]
    autocorrect = 1
[hub]
    protocol = https
[apply]
    whitespace = nowarn
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[interactive]
    singleKey = yes
[include]
    path = .gitconfig.local
[alias]
    co = commit
    ck = checkout
    st = status
    br = branch
    ff = merge --ff-only
    pr = merge --no-ff
    force-push = push --force-with-lease
    tree = log --oneline --graph --decorate
    tree-all = log --oneline --graph --decorate --all
    contains = branch -r --contains
