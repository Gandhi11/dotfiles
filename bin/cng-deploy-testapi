#!/bin/bash

if [ $# -ne 1 ]; then
	echo "usage: cng-deploy-testapi <commit>"
	exit
fi

COMMIT=$1

ssh -A ubuntu@testapi.connectngo.com << EOF
	cd ~/Source/connectngo
	git remote set-url origin git@github.com:RFIDAcademia/connectngo.git
	sh build/deployment/update.sh $COMMIT
	git remote set-url origin https://github.com/RFIDAcademia/connectngo.git
EOF

mark-deployment "Test API" $COMMIT 15m "Deployments - CnG"
php $HOME/repositories/automate-everything/artisan timelog --now --duration=15m --category="Connect & Go - Support Dusty" --task=Déploiement --comment="Déploiement de l'API de test @ $COMMIT"